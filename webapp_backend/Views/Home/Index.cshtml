<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop</title>
    <style>
        .shop-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        .shop-item {
            border: 1px solid #ddd;
            padding: 10px;
            width: 200px;
            text-align: center;
        }
        .shop-item img {
            width: 100%;
            height: auto;
        }
    </style>
</head>

<body>
    <div class="text-center">
        <h1 class="display-4">Welcome to Store!</h1>
    </div>


    <div class="shop-container" id="shop-container">
        <!-- Items will be loaded here -->

    </div>

    <script>
        $(document).ready(function() {
             $.ajax({
                 url: '@Url.Action("loadItems", "item")',
                 type: "GET",
                 success: function(data) {
                     console.log(data);
                     let container = $("#shop-container");
                     container.empty();

                     $.each(data, function(index, item) {
                         let itemHtml = `
                             <div class="shop-item">
                                 <img src="${item.itemUrl}" alt="${item.name}">
                                 <a href="/item/itemView/${item.itemId}">
                                    <h3>${item.name}</h3>
                                 </a>
                                 <p>Price: $${item.price}</p>
                                 <p> Status: ${item.status} </p>
                             </div>
                         `;
                         container.append(itemHtml);
                     });
                 },
                 error: function(xhr, status, error) {
                     console.error("Error fetching items:", error);
                 }
             });
         });
    </script>

       
</body>